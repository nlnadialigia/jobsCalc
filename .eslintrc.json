{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "eslint:recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
      "no-underscore-dangle": "off",
      "no-console": "off",
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never"
        }
      ]
    }
}
